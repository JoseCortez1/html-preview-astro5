---
import App from '../../components/app.astro';
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/translations';
import { getCurrentLocale } from '../../i18n/utils';

const locale = getCurrentLocale(Astro.url);
const t = getTranslations(locale);

---
<Layout
  title={t.seo.homeTitle}
  description={t.seo.homeDescription}
  lang={locale}
>
  <header class="container mx-auto px-6 py-4 max-w-6xl">
    <h1 class="text-4xl md:text-3xl font-bold text-gray-800 dark:text-gray-200">{t.home.title}</h1>
    <div class="h-1 w-24 bg-orange-500 dark:bg-orange-400 mt-2" aria-hidden="true"></div>
  </header>
  <App locale={locale} />
</Layout>

