---
import '../styles/global.css';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

// Define props with defaults for SEO
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
}

const {
  title = "HTML Preview Editor - Test & Edit HTML Code in Real-time",
  description = "Free online HTML editor with live preview. Write and test HTML, CSS, and JavaScript code in real-time with our Monaco-powered editor. Perfect for web developers and students.",
  image = "educortez.png", // Usando imagen existente para social sharing
  canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://html-preview.educortez.com").href,
  type = "website"
} = Astro.props;

// Prepare structured data
const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "HTML Preview Editor",
  "description": description,
  "url": canonicalURL,
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Any",
  "browserRequirements": "Requires JavaScript. Requires HTML5.",
  "softwareVersion": "1.0",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "author": {
    "@type": "Person",
    "name": "Eduardo Cortez",
    "url": "https://educortez.com"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "ratingCount": "1"
  },
  "featureList": [
    "Editor HTML en tiempo real",
    "Vista previa instantánea",
    "Editor Monaco (mismo que VS Code)",
    "Soporte para HTML, CSS y JavaScript",
    "Gratuito y sin registro"
  ]
});
const baseURL = Astro.site?.href || "https://html-preview.educortez.com";
const imageURL = image.startsWith('http') 
  ? image 
  : new URL(image, baseURL).href;

// Add this near the top of your component
const BASE_URL = import.meta.env.PROD 
  ? 'https://html-preview.educortez.com' 
  : '';
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="keywords" content="editor HTML, vista previa en vivo, editor de código, preview HTML, desarrollo web, editor Monaco, probar HTML, editor HTML tiempo real, editor HTML online, editor código HTML" />
    <meta name="author" content="Eduardo Cortez" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="theme-color" content="#ff8904" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="HTML Preview Editor - Editor de HTML con vista previa en tiempo real" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="HTML Preview Editor" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:image:alt" content="HTML Preview Editor - Editor de HTML con vista previa en tiempo real" />
    <meta name="twitter:creator" content="@josecortez" />
    <meta name="twitter:site" content="@josecortez" />
    
    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json" set:html={structuredData} />
    
    <!-- Generator Info -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    
    <!-- Page Title -->
    <title>{title}</title>

    <!-- Add a base tag -->
    <base href={BASE_URL + '/'} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    <Header />
    <main id="main-content" role="main">
      <slot />
    </main>
    <Footer />
   
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* Skip link para accesibilidad */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--orange-400, #ff8904);
    color: white;
    padding: 8px 16px;
    text-decoration: none;
    z-index: 100;
    font-weight: bold;
    border-radius: 0 0 4px 0;
  }

  .skip-link:focus {
    top: 0;
    outline: 3px solid #fff;
    outline-offset: 2px;
  }

  /* Mejorar focus visible para accesibilidad */
  *:focus-visible {
    outline: 3px solid var(--orange-400, #ff8904);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Asegurar contraste mínimo */
  a, button {
    min-height: 44px;
    min-width: 44px;
  }
</style>
